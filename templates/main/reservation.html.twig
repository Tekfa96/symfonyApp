{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
<div class="row">

<div class="col-sm-12 col-xl-6">

<h3 class="mt-5 mb-5">Create Reservation</h3>
{%for message in app.flashes('notice')%}
<div class="alert alert-success">
{{message}}
</div>
{%endfor%}
<div class="col-md-6 ">
{{ form_start(form)}}

<div class="form-group">
{{form_label(form.cin)}}
{{form_widget(form.cin,{'attr':{'class':'form-control'}})}}
</div>

<div class="form-group">
{{form_label(form.marque)}}
{{form_widget(form.marque,{'attr':{'class':'form-control'}})}}
</div>

<div class="form-group">
{{form_label(form.modele)}}
{{form_widget(form.modele,{'attr':{'class':'form-control'}})}}
</div>




<div class="form-group">
<button class="btn btn-info mt-2 text-white">Submit</button>
</div
</div>
{{form_end(form)}}
</div>
</div>
</div>

{% endblock %}
