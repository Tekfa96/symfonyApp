      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  {% for data in list %}
    <tr>
      <th scope="row">{{data.id}}</th>
      <td>{{data.categorie}}</td>
      <td>{{data.marque}}</td>
      <td>{{data.modele}}</td>
      <td>{{data.annee}}</td>
      <td>{{data.kilometrage}}</td>

      <td>
