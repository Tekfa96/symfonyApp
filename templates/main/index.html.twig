{% extends 'base.html.twig' %}


{% block body %}
<div class="container">
{%for message in app.flashes('notice')%}
<div class="alert alert-success mt-4 mb-b">
{{message}}
</div>
{%endfor%}

<a class="btn btn-primary mt-5" href="create_driver" role="button" >
Create driver
</a>
<a class="btn btn-primary mt-5" href="create_car" role="button" >
Create car
</a>

<a class="btn btn-primary mt-5" href="create_reservation" role="button" >
Create reservation
</a>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">categorie</th>
      <th scope="col">Marque</th>
      <th scope="col">Modele</th>
      <th scope="col">Ann√©e</th>
